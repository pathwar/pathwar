    {
      "name": "GO -> Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/go/cmd/zenlaw",
      "cwd": "${workspaceFolder}/go",
      "args": [
        // add your args by hand
      ],
      "showLog": true
    },
    {
      "name": "GO -> Debug Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/go/${input:pathPkg}",
      "cwd": "${workspaceFolder}/go",
      "args": [
        "-test.v",
        "-test.run",
        "${input:testFile}"
      ],
      "showLog": true
    },
  ],
  "inputs": [
    {
      "id": "pathPkg",
      "description": "enter the path to the package that contains the tested function",
      "type": "pickString",
      "options": [
        // path to pkg
      ]
    },
    {
      "id": "testFile",
      "description": "enter the test function name you want test",
      "type": "promptString",
    }
  ]
}
